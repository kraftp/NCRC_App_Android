<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/schedule_scrollview">

<LinearLayout
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/line"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:showDividers="middle|end" >

    <TextView
        android:id="@+id/thursday_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thursday" 
        android:gravity="center"
        android:textColor = "#000000"
        android:layout_marginBottom="@dimen/schedule_margin"
        android:layout_marginTop="@dimen/schedule_margin"
        android:textSize = "@dimen/weekday_font_size"
        android:textStyle = "bold"/>
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8:00-9:00\t\tRegistration\n \t Northwest Labs Room 12345" 
        android:textColor = "#000000"
        android:layout_marginBottom="@dimen/schedule_margin"
        android:layout_marginTop="@dimen/schedule_margin"
        android:textSize = "@dimen/font_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9:00-10:00\t\tRegistration and Breakfast\n \t Northwest Labs Room 12345"
        android:textColor = "#000000"
        android:layout_marginTop="@dimen/schedule_margin"
        android:layout_marginBottom="@dimen/schedule_margin"
        android:textSize = "@dimen/font_size" />
    
    <Button
        android:id="@+id/keynote_button_1"
        android:minHeight="0dp" 
        android:minWidth="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:gravity="left"
        android:text="10:00-11:00\t\tWelcome and Keynote\n \t Northwest Labs Room 12345"
        android:layout_marginTop="@dimen/schedule_margin"
        android:layout_marginBottom="@dimen/schedule_margin"
        android:textSize="@dimen/font_size" 
        android:textStyle="italic"
        android:onClick="openDetails"/>
        
    <Button
        android:id="@+id/inno_button_1"
        android:minHeight="0dp" 
        android:minWidth="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:gravity="left"
        android:text="11:00-12:30\t\tInnovation Challenge\n \t Northwest Labs Room 12345"
        android:layout_marginTop="@dimen/schedule_margin"
        android:layout_marginBottom="@dimen/schedule_margin"
        android:textSize="@dimen/font_size"
        android:textStyle="italic" 
        android:onClick="openDetails"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12:30-1:30\t\tLunch\n \t Northwest Labs Room 12345"
        android:textColor = "#000000"
        android:layout_marginTop="@dimen/schedule_margin"
        android:layout_marginBottom="@dimen/schedule_margin"
        android:textSize = "@dimen/font_size"  />
    

                    
     <TextView
        android:id="@+id/friday_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friday" 
        android:gravity="center"
        android:textColor = "#000000"
        android:layout_marginBottom="@dimen/schedule_margin"
        android:layout_marginTop="@dimen/schedule_margin"
        android:textSize = "@dimen/weekday_font_size"
        android:textStyle = "bold"/>

     
    <TextView
        android:id="@+id/saturday_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturday" 
        android:gravity="center"
        android:textColor = "#000000"
        android:layout_marginBottom="@dimen/schedule_margin"
        android:layout_marginTop="@dimen/schedule_margin"
        android:textSize = "@dimen/weekday_font_size"
        android:textStyle = "bold"/>
</LinearLayout>

</ScrollView>